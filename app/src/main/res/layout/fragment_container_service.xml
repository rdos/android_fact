<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_behavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

       <!--
       Сверху экрана есть кнопка проблема
       будет убран пока нету проблем контейнера
       <ImageButton
            android:id="@+id/enter_info_problem_btn"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_white"
            android:padding="8dp"
            android:src="@drawable/ic_fire"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/enter_info_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заполненность"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
            android:id="@+id/enter_info_percent_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="@dimen/margin_default"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/enter_info_tittle"
            tools:listitem="@layout/item_percent">

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/percent_0"
                android:layout_width="128dp"
                android:layout_height="43dp"
                app:toggle_selectedBackgroundColor="@color/colorPrimary"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="0%"
                app:toggle_textColor="@color/black"
                app:toggle_textSize="@dimen/themed_btn_size" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/percent_25"
                android:layout_width="128dp"
                android:layout_height="43dp"
                app:toggle_selectedBackgroundColor="@color/colorPrimary"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="25%"
                app:toggle_textColor="@color/black"
                app:toggle_textSize="@dimen/themed_btn_size" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/percent_50"
                android:layout_width="128dp"
                android:layout_height="43dp"
                app:toggle_selectedBackgroundColor="@color/colorPrimary"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="50%"
                app:toggle_textColor="@color/black"
                app:toggle_textSize="@dimen/themed_btn_size" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/percent_75"
                android:layout_width="128dp"
                android:layout_height="43dp"
                app:toggle_selectedBackgroundColor="@color/colorPrimary"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="75%"
                app:toggle_textColor="@color/black"
                app:toggle_textSize="@dimen/themed_btn_size" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/percent_100"
                android:layout_width="128dp"
                android:layout_height="43dp"
                app:toggle_selectedBackgroundColor="@color/colorPrimary"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="100%"
                app:toggle_textColor="@color/black"
                app:toggle_textSize="@dimen/themed_btn_size" />

            <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                android:id="@+id/percent_125"
                android:layout_width="128dp"
                android:layout_height="43dp"
                app:toggle_selectedBackgroundColor="@color/colorPrimary"
                app:toggle_selectedTextColor="@color/white"
                app:toggle_text="125%"
                app:toggle_textColor="@color/black"
                app:toggle_textSize="@dimen/themed_btn_size" />

        </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/comment_et_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:gravity="start"
            android:layout_marginHorizontal="@dimen/margin_default"
            app:layout_constraintTop_toBottomOf="@+id/enter_info_percent_rg">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/comment_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Комментарии..." />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/comment_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_default"
            android:layout_gravity="end"
            android:padding="8dp"
            android:text="@string/clear_comment"
            android:textColor="#0466B5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comment_et_out" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>