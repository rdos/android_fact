<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_cardview"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="6dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_default"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/act_start_waybill__rv_item__number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="act_start_waybill__rv_item__number" />

            <TextView
                android:id="@+id/act_start_waybill__rv_item__route_name"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="act_start_waybill__rv_item__route_name"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView
            android:id="@+id/act_start_waybill__rv_item__driver"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:text="act_start_waybill__rv_item__driver"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>