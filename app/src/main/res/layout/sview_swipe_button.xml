<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <View
        android:id="@+id/v__sview_swipe_button__background"
        android:background="@drawable/bg_dark_gray_rounded"
        android:layout_width="match_parent" android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/v__sview_swipe_button__plug"
        android:background="@drawable/bg_default_rounded_start"
        android:layout_width="8dp" android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/v__sview_swipe_button__layer"
        android:background="@color/colorAccent"
        android:layout_width="38dp" android:layout_height="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/v__sview_swipe_button__plug"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv__sview_swipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:text="Проведите вправо,\nчтобы подтвердить начало"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/aciv__sview_swipe_button__draggable"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_button"
        android:src="@drawable/ic_swipe_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>