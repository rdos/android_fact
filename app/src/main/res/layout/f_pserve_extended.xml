<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_activity_platform_serve"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_container_adapter" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_activity_platform_serve__problem"
            android:layout_width="110dp"
            android:layout_height="39dp"
            android:background="@drawable/bg_button_red__default"
            android:layout_margin="5dp"
            android:text="@string/problem_on_point"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_activity_platform_serve__kgo_served"
            android:layout_width="110dp"
            android:layout_height="39dp"
            android:layout_margin="5dp"
            android:background="@drawable/bg_button_green__default"
            android:text="КГО"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/apb_activity_platform_serve__kgo_remaining"
            app:layout_constraintStart_toEndOf="@id/acb_activity_platform_serve__problem"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apb_activity_platform_serve__kgo_remaining"
            android:layout_width="110dp"
            android:layout_height="39dp"
            android:layout_margin="5dp"
            android:textSize="13sp"
            android:background="@drawable/bg_button_green__default"
            android:text="Заказать борт"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/act_platformserve__pickup"/>

</androidx.appcompat.widget.LinearLayoutCompat>