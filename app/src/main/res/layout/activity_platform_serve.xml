<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_activity_platform_serve__point_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/margin_default"
        android:paddingHorizontal="@dimen/margin_default"
        tools:text="Hello world"
        android:textColor="@color/black"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_activity_platform_serve"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_choose" />

    <!--<androidx.appcompat.widget.AppCompatButton-->
    <!--    android:id="@+id/acb_fragment_container_service__selection"-->
    <!--    android:layout_width="wrap_content"-->
    <!--    android:layout_height="45dp"-->
    <!--    android:layout_marginStart="@dimen/margin_min"-->
    <!--    android:layout_marginTop="8dp"-->
    <!--    android:paddingStart="8dp"-->
    <!--    android:paddingEnd="@dimen/margin_default"-->
    <!--    app:layout_constraintStart_toStartOf="parent"-->
    <!--    app:layout_constraintTop_toBottomOf="@id/platform_service_rv"-->
    <!--    android:background="@drawable/bg_button_white"-->
    <!--    android:drawableStart="@drawable/ic_baseline_add_circle_outline_24"-->
    <!--    android:text="Подбор"-->
    <!--    android:textAllCaps="false"-->
    <!--    android:textColor="@color/black"/>-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_activity_platform_serve__problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_button_white"
            android:text="@string/problem_on_point"
            android:alpha="0.2"
            android:padding="@dimen/margin_default"
            android:textColor="@color/black"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apb_activity_platform_serve__kgo_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/acb_activity_platform_serve__problem"
            app:layout_constraintEnd_toStartOf="@id/acb_activity_platform_serve__kgo_served"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_button_white"
            android:padding="@dimen/margin_default"
            android:text="Заказать Борт"
            android:alpha="0.2"
            android:textColor="@color/black" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_activity_platform_serve__kgo_served"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bg_button_white"
            android:padding="@dimen/margin_default"
            android:text="КГО"
            android:alpha="0.2"
            android:textColor="@color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/margin_min"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="2dp"
            android:layout_marginVertical="6dp"
            android:paddingStart="8dp"
            android:paddingEnd="0dp"
            app:cardCornerRadius="8dp">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/acsb_activity_platform_serve__seekbar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="47dp"
                    android:paddingEnd="46dp"
                    android:max="24"
                    android:min="0"
                    android:progress="0"
                    />
                <TextView
                    android:id="@+id/CustomBtn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.18"
                    tools:text="1 м3"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <!--android:progressDrawable="@android:color/transparent"-->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/acb_activity_platform_serve__complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:background="@drawable/bg_button"
        android:text="Завершить"
        android:textColor="@color/white" />

</androidx.appcompat.widget.LinearLayoutCompat>