<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/margin_min">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/choose_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="@dimen/margin_min"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                tools:text="Союз 317" />

            <TextView
                android:id="@+id/tv_item_container_adapter__type_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/margin_min"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                tools:text="Тип контейнера" />

            <TextView
                android:id="@+id/tv_item_container_adapter__constructiveVolume"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginEnd="@dimen/margin_min"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black"
                tools:text="Объём" />

            <ImageView
                android:id="@+id/choose_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/ic_check"
                android:contentDescription="TODO" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow"
                android:contentDescription="TODO" />
        </androidx.appcompat.widget.LinearLayoutCompat>




        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/map_behavior_expl11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/map_behavior_scrp_id"
            tools:el_expanded="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/map_behavior_fire"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_weight="2"
                    android:background="@drawable/bg_circle_button"
                    android:src="@drawable/ic_fire"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/map_behavior_start_service"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_button"
                    android:text="@string/start_serve"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/map_behavior_fire"
                    app:layout_constraintStart_toEndOf="@id/map_behavior_fire"
                    app:layout_constraintEnd_toStartOf="@id/map_behavior_location"
                    app:layout_constraintTop_toTopOf="@id/map_behavior_fire" />

                <ImageButton
                    android:id="@+id/map_behavior_location"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginTop="@dimen/margin_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_weight="2"
                    android:background="@drawable/bg_circle_button"
                    android:src="@drawable/ic_route"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>