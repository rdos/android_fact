<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="@dimen/margin_min"
        android:paddingTop="@dimen/margin_min"
        android:paddingBottom="@dimen/margin_min">

        <TextView
            android:id="@+id/choose_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginEnd="@dimen/margin_min"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            tools:text="Союз 317" />

        <TextView
            android:id="@+id/tv_item_container_adapter__type_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/margin_min"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            tools:text="Тип контейнера" />

        <TextView
            android:id="@+id/tv_item_container_adapter__constructiveVolume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_marginEnd="@dimen/margin_min"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            tools:text="Объём" />

        <TextView
            android:id="@+id/tv_item_container_adapter__volume"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
