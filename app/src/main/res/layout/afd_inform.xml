<?xml version="1.0" encoding="utf-8"?>
<ru.smartro.worknote.andPOintD.SmartROllc
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:background="@drawable/bg_button_red__default">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv__adf_inform__title"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Оповещение"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv__adf_inform__content"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/accept_task_check"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_marginHorizontal="22dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_alert_additional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="til_alert_additional"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:visibility="gone"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_alert_additional"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:gravity="top"
            android:visibility="gone"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb__adf_inform__gotonext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="18dp"
            android:background="@drawable/bg_button"
            android:text="acb__adf_inform__gotonext"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb__adf_inform__gotoback"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_button_green__default"
            android:text="acb__adf_inform__gotoback"
            android:textColor="@color/black" />
    </androidx.appcompat.widget.LinearLayoutCompat>


</ru.smartro.worknote.andPOintD.SmartROllc>