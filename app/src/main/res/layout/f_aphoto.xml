<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >
    <androidx.camera.view.PreviewView
        android:id="@+id/view_finder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/camera_ui_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layoutDirection="ltr"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Контейнер: фото до" />


        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/actb_fragment_camera__sound"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ic_fragment_camera__sound"
            android:checked="false"
            android:textOff="@null"
            android:textOn="@null"
            app:layout_constraintBottom_toTopOf="@id/photo_flash"
            app:layout_constraintEnd_toEndOf="@+id/photo_flash"
            app:layout_constraintStart_toStartOf="@id/photo_flash"
            />

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/photo_flash"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_photo_flash"
            android:checked="false"
            android:textOff="@null"
            android:textOn="@null"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="@+id/photo_view_button"
            app:layout_constraintBottom_toTopOf="@+id/image_counter"
            app:layout_constraintEnd_toEndOf="@+id/image_counter"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/photo_view_button"
            android:layout_width="@dimen/round_button_medium"
            android:layout_height="@dimen/round_button_medium"
            android:background="@drawable/ic_outer_circle"
            android:contentDescription="@string/gallery_button_alt"
            android:padding="@dimen/spacing_large"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/ib_f_aphoto__takephoto"
            app:layout_constraintEnd_toStartOf="@+id/ib_f_aphoto__takephoto"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ib_f_aphoto__takephoto"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/image_counter"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@id/photo_view_button"
            app:layout_constraintEnd_toEndOf="@id/photo_view_button"
            app:layout_constraintStart_toStartOf="@id/photo_view_button"
            app:layout_constraintTop_toTopOf="@id/photo_view_button"
            tools:text="0"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ib_f_aphoto__takephoto"
            android:layout_width="@dimen/round_button_large"
            android:layout_height="@dimen/round_button_large"
            android:background="@drawable/ic_shutter"
            android:contentDescription="@string/capture_button_alt"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@id/acet_f_aphoto__comment"
            app:layout_goneMarginBottom="50dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/acet_f_aphoto__comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint="добавьте комментарий"
            android:maxLines="2"
            android:lines="2"
            android:padding="6dp"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/acactv_f_aphoto__fail_reason"
            android:layout_width="wrap_content"
            android:minWidth="264dp"
            android:layout_height="38dp"
            android:background="@drawable/bg_button_red_interactive"
            android:editable="false"
            android:gravity="center"
            android:paddingStart="@dimen/margin_min"
            android:paddingEnd="@dimen/margin_min"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/ib_f_aphoto__takephoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/photo_flash"
            app:layout_constraintTop_toBottomOf="@+id/label_for"
            tools:hint="выберите причину невывоза" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_f_aphoto__goto_next"
            android:layout_width="110dp"
            android:layout_height="39dp"
            android:background="@drawable/bg_button_green_interactive"
            android:contentDescription="@string/gallery_button_alt"
            android:text="Далее"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/ib_f_aphoto__takephoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_f_aphoto__takephoto"
            app:layout_constraintTop_toTopOf="@+id/ib_f_aphoto__takephoto"
            app:srcCompat="@drawable/ic_send"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/acb_f_aphoto__cancel"
            android:layout_width="110dp"
            android:layout_height="39dp"
            android:background="@drawable/bg_button_red_interactive"
            android:text="Отмена"
            android:textColor="@color/dark_gray"
            app:layout_constraintBottom_toBottomOf="@+id/ib_f_aphoto__takephoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ib_f_aphoto__takephoto"
            app:layout_constraintTop_toTopOf="@+id/ib_f_aphoto__takephoto"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

