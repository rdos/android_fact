<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_button_red__usebutton"
    >
    <TextView
        android:id="@+id/actv_f_complete_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Вы находитесь слишком далеко от контейнерной площадки. \nВы уверены, что хотите взять в работу эту КП?" />

    <Button
        android:id="@+id/act_map__dialog_platform_clicked_dtl__alert_by_point__ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:background="@drawable/bg_button"
        android:padding="@dimen/margin_default"
        android:text="Подтвердить"
        android:textColor="@color/white" />
</androidx.appcompat.widget.LinearLayoutCompat>
