<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        android:layout_marginHorizontal="@dimen/margin_default"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/choose_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Союз 317" />

        <ImageView
            android:id="@+id/choose_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/choose_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />


        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/enter_info_exp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            app:el_expanded="true"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/choose_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.platform_service.ContainerServiceActivity">

                <ImageButton
                    android:id="@+id/enter_info_problem_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_button_white"
                    android:padding="8dp"
                    android:src="@drawable/ic_fire"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/enter_info_tittle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Заполненность"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/enter_info_problem_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/enter_info_problem_btn" />

                <nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup
                    android:id="@+id/enter_info_percent_rg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/enter_info_tittle"
                    tools:listitem="@layout/item_percent">

                    <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                        android:id="@+id/percent_0"
                        android:layout_width="128dp"
                        android:layout_height="43dp"
                        app:toggle_selectedBackgroundColor="@color/colorPrimary"
                        app:toggle_selectedTextColor="@color/white"
                        app:toggle_text="0%"
                        app:toggle_textSize="@dimen/themed_btn_size" />

                    <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                        android:id="@+id/percent_25"
                        android:layout_width="128dp"
                        android:layout_height="43dp"
                        app:toggle_selectedBackgroundColor="@color/colorPrimary"
                        app:toggle_selectedTextColor="@color/white"
                        app:toggle_text="25%"
                        app:toggle_textSize="@dimen/themed_btn_size" />

                    <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                        android:id="@+id/percent_50"
                        android:layout_width="128dp"
                        android:layout_height="43dp"
                        app:toggle_selectedBackgroundColor="@color/colorPrimary"
                        app:toggle_selectedTextColor="@color/white"
                        app:toggle_text="50%"
                        app:toggle_textSize="@dimen/themed_btn_size" />

                    <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                        android:id="@+id/percent_75"
                        android:layout_width="128dp"
                        android:layout_height="43dp"
                        app:toggle_selectedBackgroundColor="@color/colorPrimary"
                        app:toggle_selectedTextColor="@color/white"
                        app:toggle_text="75%"
                        app:toggle_textSize="@dimen/themed_btn_size" />

                    <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                        android:id="@+id/percent_100"
                        android:layout_width="128dp"
                        android:layout_height="43dp"
                        app:toggle_selectedBackgroundColor="@color/colorPrimary"
                        app:toggle_selectedTextColor="@color/white"
                        app:toggle_text="100%"
                        app:toggle_textSize="@dimen/themed_btn_size" />

                    <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
                        android:id="@+id/percent_125"
                        android:layout_width="128dp"
                        android:layout_height="43dp"
                        app:toggle_selectedBackgroundColor="@color/colorPrimary"
                        app:toggle_selectedTextColor="@color/white"
                        app:toggle_text="125%"
                        app:toggle_textSize="@dimen/themed_btn_size" />

                </nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/comment_et_out"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:gravity="start"
                    app:layout_constraintTop_toBottomOf="@+id/enter_info_percent_rg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/comment_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Комментарии..." />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/comment_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="8dp"
                    android:text="@string/clear_comment"
                    android:textColor="#0466B5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/comment_et_out" />

                <TextView
                    android:id="@+id/back_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_default"
                    android:layout_marginBottom="6dp"
                    android:fitsSystemWindows="true"
                    android:gravity="center"
                    android:text="@string/cancel_clear"
                    android:textColor="#0466B5"
                    app:layout_constraintBottom_toTopOf="@id/save_btn"
                    app:layout_constraintTop_toBottomOf="@+id/comment_clear" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>