<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_button_green__default"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:paddingHorizontal="18dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/wo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Союз 317" />

    <TextView
        android:id="@+id/wo_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/wo_name"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Статус:" />

    <TextView
        android:id="@+id/wo_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        app:layout_constraintStart_toEndOf="@id/wo_status_label"
        app:layout_constraintTop_toBottomOf="@id/wo_name"
        tools:text="Новый" />

    <TextView
        android:id="@+id/choose_st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>